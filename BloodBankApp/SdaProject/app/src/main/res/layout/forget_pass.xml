<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo Section -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="391dp"
        android:layout_height="116dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logowithline" />


    <!-- Forget Password Title -->

    <TextView
        android:id="@+id/forgetPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your email address to reset your password"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:gravity="center" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_w"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textSize="16sp"
        android:autofillHints="emailAddress"
        android:layout_marginBottom="30dp" />

    <!-- Reset Password Button -->
    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_bg_blue"
        android:text="Reset Password"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <!-- Spacer to push the "Back" button to the bottom -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Back Button positioned at the bottom-left -->
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="420dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="start|bottom"
        android:text="Back"
        android:textColor="#490008"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
