<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".RequestActivity">

    <!-- Top Header -->
    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="150dp"
        android:background="#490008"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:text="@string/title_requests"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/text_back"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/subtitle_request"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="start" />
    </LinearLayout>

    <!-- Form Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_name"
                android:textStyle="bold"
                android:textColor="@color/greyy" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_bg_w"
                android:backgroundTint="@color/lightgrey"
                android:hint="@string/hint_enter_name"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Blood Group Dropdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_blood_group"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#E5E5E5" />

            <!-- Number of Units -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_number_of_units"
                android:textStyle="bold" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_bg_w"
                android:hint="@string/hint_enter_units"
                android:padding="12dp"
                android:backgroundTint="@color/lightgrey"
                android:textSize="14sp" />

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_date"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/btn_bg_w"
                    android:hint="@string/hint_enter_date"
                    android:padding="12dp"
                    android:backgroundTint="@color/lightgrey"

                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/calender" />
            </LinearLayout>

            <!-- Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_time"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="25dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM" />
            </RadioGroup>

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_gender"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#E5E5E5" />

            <!-- Hospital Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_hospital_name"
                android:textStyle="bold" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_bg_w"
                android:hint="@string/hint_hospital_name"
                android:padding="12dp"
                android:backgroundTint="@color/lightgrey"
                android:textSize="14sp" />

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_location"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/btn_bg_w"
                    android:hint="@string/hint_location"
                    android:padding="12dp"
                    android:backgroundTint="@color/lightgrey"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/location" />
            </LinearLayout>

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/label_phone_number"
                android:textStyle="bold" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_bg_w"
                android:hint="@string/hint_phone_number"
                android:padding="12dp"
                android:backgroundTint="@color/lightgrey"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Done Button -->
    <Button
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#490008"
        android:text="@string/button_done"
        android:textColor="#FFFFFF" />
</LinearLayout>
